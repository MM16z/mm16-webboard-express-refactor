{
    "name": "mm16-webboard-express-refactor",
    "version": "1.0.0",
    "main": "index.js",
    "type": "module",
    "scripts": {
        "start": "node dist/server.js",
        "dev": "nodemon -I --exec node --experimental-specifier-resolution=node  --loader ts-node/esm ./src/server.ts",
        "start:prod": "pm2 start dist/server.js --name mm16-webboard-express-refactor",
        "build": "tsc",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "lint-staged": "lint-staged",
        "format": "prettier --write \"src/**/*.ts\"",
        "check-format": "prettier --check \"src/**/*.ts\"",
        "check-types": "tsc --noEmit",
        "prepare": "husky install",
        "prisma:generate": "prisma generate",
        "prisma:migrate": "prisma migrate dev"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "description": "",
    "dependencies": {
        "@prisma/client": "^5.18.0",
        "@types/cors": "^2.8.17",
        "@types/jsonwebtoken": "^9.0.6",
        "bcrypt": "^5.1.1",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "express": "^4.19.2",
        "jsonwebtoken": "^9.0.2"
    },
    "devDependencies": {
        "@eslint/js": "^8.57.0",
        "@types/bcrypt": "^5.0.2",
        "@types/express": "^4.17.21",
        "@types/node": "^22.5.0",
        "@typescript-eslint/eslint-plugin": "^8.2.0",
        "@typescript-eslint/parser": "^8.2.0",
        "eslint": "8.57",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-eslint-plugin": "^6.2.0",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^5.2.1",
        "globals": "^15.9.0",
        "husky": "^8.0.0",
        "lint-staged": "^15.2.9",
        "prettier": "^3.3.3",
        "prisma": "^5.18.0",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.5.4",
        "typescript-eslint": "^8.2.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,ts}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{json,md}": "prettier --write"
    }
}
